  <%= form.check_box :amenity_list, { multiple: true, label: "WiFi" }, 'WiFi', nil %>
  <%= form.check_box :amenity_list, { multiple: true, label: "Kitchen" }, 'Kitchen', nil %>
</div>

<div class="field">
  <%= form.file_field :images, multiple: true %>
</div>






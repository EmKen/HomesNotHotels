<div class="text-field">
  <%= form.text_field :address_line_one %>
</div>

<div class="text-field">
  <%= form.text_field :address_line_two %>
</div>

<div class="text-field">
  <%= form.text_field :city_town, label: "Town/City" %>
</div>

<div class="text-field">
  <%= form.text_field :state_county, label: "State/Province/County" %>
</div>

<div class="text-field">
  <%= form.text_field :country %>
</div>

<div class="text-field">
  <%= form.text_field :zip_postcode, label: "Zip/Postcode" %>
</div>

